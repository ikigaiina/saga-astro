---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Inspektur Entitas - The Soulforge Saga">
  <div class="w-full max-w-6xl glass-card p-6 sm:p-8 rounded-2xl shadow-lg border border-border-color flex flex-col h-[95vh]">
    <h1 class="text-3xl sm:text-4xl font-bold text-white tracking-wider mb-6 text-center drop-shadow-lg" data-i18n-key="entity_inspector_title">
      Inspektur Entitas
    </h1>

    <div class="flex-grow flex flex-col lg:flex-row gap-6 overflow-hidden">
      <!-- Entity Search and List -->
      <div class="flex-shrink-0 bg-slate-800/60 rounded-xl p-4 lg:w-80 flex flex-col space-y-4 overflow-y-auto scrollbar-thin">
        <h3 class="text-xl font-bold text-white mb-2" data-i18n-key="entity_list_title">Daftar Entitas</h3>
        
        <div class="space-y-3">
          <div class="relative">
            <input type="text" placeholder="Cari entitas..." class="glass-input w-full p-2 pl-8">
            <i data-lucide="search" class="w-4 h-4 text-slate-400 absolute left-2 top-3"></i>
          </div>
          
          <div class="max-h-96 overflow-y-auto scrollbar-thin space-y-2">
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-indigo-500 flex items-center justify-center mr-3">
                  <i data-lucide="user" class="w-4 h-4 text-white"></i>
                </div>
                <div>
                  <h4 class="font-bold text-white">Aelindra the Wise</h4>
                  <p class="text-xs text-slate-400">Penyihir Tinggi</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center mr-3">
                  <i data-lucide="leaf" class="w-4 h-4 text-white"></i>
                </div>
                <div>
                  <h4 class="font-bold text-white">Yggdrasil Guardian</h4>
                  <p class="text-xs text-slate-400">Entitas Alam</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-red-500 flex items-center justify-center mr-3">
                  <i data-lucide="flame" class="w-4 h-4 text-white"></i>
                </div>
                <div>
                  <h4 class="font-bold text-white">Infernal Drake</h4>
                  <p class="text-xs text-slate-400">Makhluk Api</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center mr-3">
                  <i data-lucide="droplets" class="w-4 h-4 text-white"></i>
                </div>
                <div>
                  <h4 class="font-bold text-white">Aqua Spirit</h4>
                  <p class="text-xs text-slate-400">Roh Air</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-purple-500 flex items-center justify-center mr-3">
                  <i data-lucide="star" class="w-4 h-4 text-white"></i>
                </div>
                <div>
                  <h4 class="font-bold text-white">Celestial Being</h4>
                  <p class="text-xs text-slate-400">Entitas Langit</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-yellow-500 flex items-center justify-center mr-3">
                  <i data-lucide="zap" class="w-4 h-4 text-white"></i>
                </div>
                <div>
                  <h4 class="font-bold text-white">Storm Caller</h4>
                  <p class="text-xs text-slate-400">Panggil Badai</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Entity Details and Modification -->
      <div class="flex-grow bg-slate-800/60 rounded-xl p-4 overflow-auto scrollbar-thin">
        <div class="glass-card p-6 rounded-lg mb-6">
          <div class="flex items-start mb-6">
            <div class="w-16 h-16 rounded-full bg-indigo-500 flex items-center justify-center mr-4">
              <i data-lucide="user" class="w-8 h-8 text-white"></i>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-white">Aelindra the Wise</h3>
              <p class="text-slate-300">Penyihir Tinggi dari Menara Kristal</p>
              <div class="flex flex-wrap gap-2 mt-2">
                <span class="px-2 py-1 bg-indigo-600 text-xs rounded">Penyihir</span>
                <span class="px-2 py-1 bg-green-600 text-xs rounded">Netral</span>
                <span class="px-2 py-1 bg-yellow-600 text-xs rounded">Level 42</span>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <h4 class="font-bold text-slate-300 mb-3">Atribut Dasar</h4>
              <div class="space-y-3">
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Kekuatan</span>
                    <span class="text-white">18</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-red-500 h-2 rounded-full" style="width: 72%"></div>
                  </div>
                </div>
                
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Ketangkasan</span>
                    <span class="text-white">14</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-green-500 h-2 rounded-full" style="width: 56%"></div>
                  </div>
                </div>
                
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Intelektual</span>
                    <span class="text-white">24</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-blue-500 h-2 rounded-full" style="width: 96%"></div>
                  </div>
                </div>
                
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Kepribadian</span>
                    <span class="text-white">16</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-purple-500 h-2 rounded-full" style="width: 64%"></div>
                  </div>
                </div>
              </div>
            </div>
            
            <div>
              <h4 class="font-bold text-slate-300 mb-3">Keterampilan</h4>
              <div class="space-y-3">
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Sihir Elemental</span>
                    <span class="text-white">95</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-indigo-500 h-2 rounded-full" style="width: 95%"></div>
                  </div>
                </div>
                
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Penyembuhan</span>
                    <span class="text-white">87</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-green-500 h-2 rounded-full" style="width: 87%"></div>
                  </div>
                </div>
                
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Alkimia</span>
                    <span class="text-white">78</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-yellow-500 h-2 rounded-full" style="width: 78%"></div>
                  </div>
                </div>
                
                <div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-400">Penglihatan Mistis</span>
                    <span class="text-white">91</span>
                  </div>
                  <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                    <div class="bg-purple-500 h-2 rounded-full" style="width: 91%"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <button class="glass-button primary-button px-4 py-2">
              <i data-lucide="edit"></i> <span>Modifikasi</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="copy"></i> <span>Duplikat</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="trash"></i> <span>Hapus</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="download"></i> <span>Ekspor</span>
            </button>
          </div>
        </div>
        
        <div class="glass-card p-6 rounded-lg">
          <h3 class="text-xl font-bold text-white mb-4">Riwayat Interaksi</h3>
          <div class="space-y-4">
            <div class="border-l-2 border-indigo-500 pl-4 py-2">
              <div class="flex justify-between">
                <p class="text-white">Membantu penyihir muda menguasai sihir air</p>
                <span class="text-slate-400 text-sm">3 hari yang lalu</span>
              </div>
              <p class="text-slate-400 text-sm">Meningkatkan hubungan dengan Guild Penyihir sebesar 15 poin</p>
            </div>
            
            <div class="border-l-2 border-green-500 pl-4 py-2">
              <div class="flex justify-between">
                <p class="text-white">Menyembuhkan hutan tercemar</p>
                <span class="text-slate-400 text-sm">1 minggu yang lalu</span>
              </div>
              <p class="text-slate-400 text-sm">Mendapat berkah dari Yggdrasil Guardian</p>
            </div>
            
            <div class="border-l-2 border-red-500 pl-4 py-2">
              <div class="flex justify-between">
                <p class="text-white">Bertarung melawan Infernal Drake</p>
                <span class="text-slate-400 text-sm">2 minggu yang lalu</span>
              </div>
              <p class="text-slate-400 text-sm">Menerima luka ringan, mempelajari teknik pertahanan baru</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <button id="back-to-forger-btn" class="glass-button secondary-button mt-8">
      <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i> <span data-i18n-key="back_to_forger_dashboard">Kembali ke Dashboard Forger</span>
    </button>
  </div>
</MainLayout>