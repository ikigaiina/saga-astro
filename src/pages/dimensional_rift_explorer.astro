---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Penjelajah Retakan Dimensi - The Soulforge Saga">
  <div class="w-full max-w-6xl glass-card p-6 sm:p-8 rounded-2xl shadow-lg border border-border-color flex flex-col h-[95vh]">
    <h1 class="text-3xl sm:text-4xl font-bold text-white tracking-wider mb-6 text-center drop-shadow-lg" data-i18n-key="dimensional_rift_explorer_title">
      Penjelajah Retakan Dimensi
    </h1>

    <div class="flex-grow flex flex-col lg:flex-row gap-6 overflow-hidden">
      <!-- Rift Scans and Readings -->
      <div class="flex-shrink-0 bg-slate-800/60 rounded-xl p-4 lg:w-80 flex flex-col space-y-4 overflow-y-auto scrollbar-thin">
        <h3 class="text-xl font-bold text-white mb-2" data-i18n-key="rift_scans_title">Pemindaian Retakan</h3>
        
        <div class="space-y-3">
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-indigo-500">
            <div class="flex justify-between items-start mb-2">
              <h4 class="font-bold text-white">Retakan Stabil A-7</h4>
              <span class="px-2 py-1 bg-green-600 text-xs rounded">Stabil</span>
            </div>
            <p class="text-sm text-slate-300">Dimensi Paralel #1247-B</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Jarak: 2.3 km</span>
              <span>Risiko: Rendah</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-purple-500">
            <div class="flex justify-between items-start mb-2">
              <h4 class="font-bold text-white">Retakan Fluktuatif C-3</h4>
              <span class="px-2 py-1 bg-yellow-600 text-xs rounded">Fluktuatif</span>
            </div>
            <p class="text-sm text-slate-300">Dimensi Kuantum #8819-Q</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Jarak: 5.7 km</span>
              <span>Risiko: Sedang</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-red-500">
            <div class="flex justify-between items-start mb-2">
              <h4 class="font-bold text-white">Retakan Berbahaya X-9</h4>
              <span class="px-2 py-1 bg-red-600 text-xs rounded">Berbahaya</span>
            </div>
            <p class="text-sm text-slate-300">Dimensi Kekacauan #0000-X</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Jarak: 12.1 km</span>
              <span>Risiko: Tinggi</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-blue-500">
            <div class="flex justify-between items-start mb-2">
              <h4 class="font-bold text-white">Retakan Misterius Z-1</h4>
              <span class="px-2 py-1 bg-slate-600 text-xs rounded">Tidak Diketahui</span>
            </div>
            <p class="text-sm text-slate-300">Dimensi ???</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Jarak: 8.4 km</span>
              <span>Risiko: ???</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-green-500">
            <div class="flex justify-between items-start mb-2">
              <h4 class="font-bold text-white">Retakan Penelitian B-5</h4>
              <span class="px-2 py-1 bg-green-600 text-xs rounded">Stabil</span>
            </div>
            <p class="text-sm text-slate-300">Dimensi Laboratorium #5555-L</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Jarak: 1.8 km</span>
              <span>Risiko: Rendah</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg">
            <h4 class="font-bold text-white mb-3" data-i18n-key="scanner_status_title">Status Pemindai</h4>
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-slate-400" data-i18n-key="scanner_power">Daya Pemindai</span>
                <span class="text-white">98%</span>
              </div>
              <div class="w-full bg-slate-700 rounded-full h-2">
                <div class="bg-green-500 h-2 rounded-full" style="width: 98%"></div>
              </div>
              
              <div class="flex justify-between text-sm mt-3">
                <span class="text-slate-400" data-i18n-key="rift_stability">Stabilitas Retakan</span>
                <span class="text-white">76%</span>
              </div>
              <div class="w-full bg-slate-700 rounded-full h-2">
                <div class="bg-yellow-500 h-2 rounded-full" style="width: 76%"></div>
              </div>
              
              <div class="flex justify-between text-sm mt-3">
                <span class="text-slate-400" data-i18n-key="dimensional_activity">Aktivitas Dimensional</span>
                <span class="text-white">42%</span>
              </div>
              <div class="w-full bg-slate-700 rounded-full h-2">
                <div class="bg-blue-500 h-2 rounded-full" style="width: 42%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Rift Visualization and Controls -->
      <div class="flex-grow bg-slate-800/60 rounded-xl p-4 overflow-hidden">
        <div class="glass-card p-6 rounded-lg h-full flex flex-col">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-white">Retakan Stabil A-7</h3>
            <div class="flex gap-2">
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="play"></i>
              </button>
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="pause"></i>
              </button>
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="rotate-ccw"></i>
              </button>
            </div>
          </div>
          
          <div class="flex-grow relative mb-6">
            <div id="rift-visualization" class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 rounded-lg flex items-center justify-center">
              <!-- Rift visualization will be rendered here -->
              <div class="relative w-80 h-80">
                <!-- Rift anomaly -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-48 h-48 rounded-full border-4 border-indigo-400 animate-pulse opacity-70"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 rounded-full border-4 border-purple-400 animate-pulse opacity-80" style="animation-delay: 0.5s"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-16 h-16 rounded-full border-4 border-blue-400 animate-pulse opacity-90" style="animation-delay: 1s"></div>
                
                <!-- Energy streams -->
                <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-1 h-24 bg-indigo-400 animate-flow"></div>
                <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-1 h-24 bg-purple-400 animate-flow" style="animation-delay: 0.5s"></div>
                <div class="absolute top-1/2 left-0 transform -translate-y-1/2 w-24 h-1 bg-blue-400 animate-flow" style="animation-delay: 1s"></div>
                <div class="absolute top-1/2 right-0 transform -translate-y-1/2 w-24 h-1 bg-indigo-400 animate-flow" style="animation-delay: 1.5s"></div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="glass-card p-4 rounded-lg">
              <h4 class="font-bold text-slate-300 mb-2" data-i18n-key="dimensional_properties">Properti Dimensional</h4>
              <ul class="text-slate-300 space-y-1 text-sm">
                <li><span class="text-slate-400">Gravitasi:</span> <span class="text-white">0.8G</span></li>
                <li><span class="text-slate-400">Tekanan:</span> <span class="text-white">1.2 atm</span></li>
                <li><span class="text-slate-400">Komposisi:</span> <span class="text-white">O₂/N₂</span></li>
                <li><span class="text-slate-400">Radiasi:</span> <span class="text-white">Rendah</span></li>
              </ul>
            </div>
            
            <div class="glass-card p-4 rounded-lg">
              <h4 class="font-bold text-slate-300 mb-2" data-i18n-key="exploration_data">Data Eksplorasi</h4>
              <ul class="text-slate-300 space-y-1 text-sm">
                <li><span class="text-slate-400">Eksplorasi:</span> <span class="text-white">67%</span></li>
                <li><span class="text-slate-400">Sumber Daya:</span> <span class="text-white">Tinggi</span></li>
                <li><span class="text-slate-400">Ancaman:</span> <span class="text-white">Rendah</span></li>
                <li><span class="text-slate-400">Artifak:</span> <span class="text-white">3 ditemukan</span></li>
              </ul>
            </div>
            
            <div class="glass-card p-4 rounded-lg">
              <h4 class="font-bold text-slate-300 mb-2" data-i18n-key="rift_status">Status Retakan</h4>
              <ul class="text-slate-300 space-y-1 text-sm">
                <li><span class="text-slate-400">Stabilitas:</span> <span class="text-green-400">Stabil</span></li>
                <li><span class="text-slate-400">Umur:</span> <span class="text-white">42 hari</span></li>
                <li><span class="text-slate-400">Pertumbuhan:</span> <span class="text-white">0.2%/hari</span></li>
                <li><span class="text-slate-400">Penutupan:</span> <span class="text-white">Auto 120 hari</span></li>
              </ul>
            </div>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <button class="glass-button primary-button px-4 py-2">
              <i data-lucide="door-open"></i> <span data-i18n-key="enter_rift">Masuki Retakan</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="settings"></i> <span data-i18n-key="stabilize_rift">Stabilkan Retakan</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="shield"></i> <span data-i18n-key="secure_rift">Amankan Retakan</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="x-circle"></i> <span data-i18n-key="close_rift">Tutup Retakan</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <button id="back-to-wanderer-btn" class="glass-button secondary-button mt-8">
      <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i> <span data-i18n-key="back_to_wanderer_dashboard">Kembali ke Dashboard Wanderer</span>
    </button>
  </div>
</MainLayout>