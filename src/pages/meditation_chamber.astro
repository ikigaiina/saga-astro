---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Ruang Meditasi - The Soulforge Saga">
  <div class="w-full max-w-6xl glass-card p-6 sm:p-8 rounded-2xl shadow-lg border border-border-color flex flex-col h-[95vh]">
    <h1 class="text-3xl sm:text-4xl font-bold text-white tracking-wider mb-6 text-center drop-shadow-lg" data-i18n-key="meditation_chamber_title">
      Ruang Meditasi
    </h1>

    <div class="flex-grow flex flex-col lg:flex-row gap-6 overflow-hidden">
      <!-- Meditation Programs -->
      <div class="flex-shrink-0 bg-slate-800/60 rounded-xl p-4 lg:w-80 flex flex-col space-y-4 overflow-y-auto scrollbar-thin">
        <h3 class="text-xl font-bold text-white mb-2" data-i18n-key="meditation_programs_title">Program Meditasi</h3>
        
        <div class="space-y-3">
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-indigo-500">
            <h4 class="font-bold text-white">Pemulihan Energi</h4>
            <p class="text-sm text-slate-300 mt-1">Mengembalikan energi spiritual dan fisik</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>15 menit</span>
              <span class="px-2 py-1 bg-green-600 text-xs rounded">Dasar</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-purple-500">
            <h4 class="font-bold text-white">Fokus Pikiran</h4>
            <p class="text-sm text-slate-300 mt-1">Meningkatkan konsentrasi dan kejernihan pikiran</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>20 menit</span>
              <span class="px-2 py-1 bg-yellow-600 text-xs rounded">Menengah</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-red-500">
            <h4 class="font-bold text-white">Penyembuhan Trauma</h4>
            <p class="text-sm text-slate-300 mt-1">Mengatasi trauma emosional dan mental</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>30 menit</span>
              <span class="px-2 py-1 bg-red-600 text-xs rounded">Lanjutan</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-green-500">
            <h4 class="font-bold text-white">Koneksi Kosmik</h4>
            <p class="text-sm text-slate-300 mt-1">Meningkatkan kesatuan dengan alam semesta</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>45 menit</span>
              <span class="px-2 py-1 bg-red-600 text-xs rounded">Lanjutan</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-blue-500">
            <h4 class="font-bold text-white">Visi Mistis</h4>
            <p class="text-sm text-slate-300 mt-1">Membuka pintu gerbang kesadaran mistis</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>60 menit</span>
              <span class="px-2 py-1 bg-red-600 text-xs rounded">Ahli</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-yellow-500">
            <h4 class="font-bold text-white">Meditasi Berjalan</h4>
            <p class="text-sm text-slate-300 mt-1">Meditasi dinamis sambil bergerak</p>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>25 menit</span>
              <span class="px-2 py-1 bg-green-600 text-xs rounded">Dasar</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Meditation Environment -->
      <div class="flex-grow bg-slate-800/60 rounded-xl p-4 overflow-hidden">
        <div class="glass-card p-6 rounded-lg h-full flex flex-col">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-white">Pemulihan Energi</h3>
            <div class="flex gap-2">
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="play"></i>
              </button>
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="pause"></i>
              </button>
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="rotate-ccw"></i>
              </button>
            </div>
          </div>
          
          <div class="flex-grow relative mb-6">
            <div id="meditation-environment" class="absolute inset-0 bg-gradient-to-br from-blue-900 via-purple-900 to-indigo-900 rounded-lg flex items-center justify-center">
              <!-- Meditation visualization will be rendered here -->
              <div class="relative w-64 h-64">
                <!-- Breathing circle -->
                <div class="absolute inset-0 rounded-full border-4 border-blue-400 animate-ping opacity-20"></div>
                <div class="absolute inset-4 rounded-full border-4 border-purple-400 animate-ping opacity-30" style="animation-delay: 0.5s"></div>
                <div class="absolute inset-8 rounded-full border-4 border-indigo-400 animate-ping opacity-40" style="animation-delay: 1s"></div>
                
                <!-- Center point -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-16 h-16 bg-white rounded-full opacity-20"></div>
                
                <!-- Floating particles -->
                <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-blue-300 rounded-full animate-float" style="animation-delay: 0s"></div>
                <div class="absolute top-3/4 right-1/4 w-2 h-2 bg-purple-300 rounded-full animate-float" style="animation-delay: 1s"></div>
                <div class="absolute bottom-1/4 left-3/4 w-2 h-2 bg-indigo-300 rounded-full animate-float" style="animation-delay: 2s"></div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div>
              <label class="block text-slate-400 text-sm mb-1">Durasi</label>
              <div class="text-white text-lg font-bold">12:34</div>
              <div class="text-slate-400 text-sm">dari 15:00</div>
            </div>
            <div>
              <label class="block text-slate-400 text-sm mb-1">Tingkat Relaksasi</label>
              <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                <div class="bg-green-500 h-2 rounded-full" style="width: 78%"></div>
              </div>
              <div class="text-slate-400 text-sm mt-1">78%</div>
            </div>
            <div>
              <label class="block text-slate-400 text-sm mb-1">Energi Dipulihkan</label>
              <div class="w-full bg-slate-700 rounded-full h-2 mt-1">
                <div class="bg-blue-500 h-2 rounded-full" style="width: 65%"></div>
              </div>
              <div class="text-slate-400 text-sm mt-1">65%</div>
            </div>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <button class="glass-button primary-button px-4 py-2">
              <i data-lucide="check-circle"></i> <span>Akhiri Meditasi</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="music"></i> <span>Ganti Suara Alam</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="settings"></i> <span>Sesuaikan Lingkungan</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <button id="back-to-wanderer-btn" class="glass-button secondary-button mt-8">
      <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i> <span data-i18n-key="back_to_wanderer_dashboard">Kembali ke Dashboard Wanderer</span>
    </button>
  </div>
</MainLayout>