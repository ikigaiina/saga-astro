---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="The Soulforge Saga">
  <div class="flex flex-col items-center justify-center p-4 sm:p-8 w-full max-w-xl">
    <h1 class="text-4xl sm:text-5xl font-bold text-white tracking-wider mb-8 text-center drop-shadow-lg" data-i18n-key="app_title">
      The Soulforge Saga
    </h1>

    <div id="loading-spinner" class="text-white text-xl mb-4 flex items-center justify-center" style="display: none;">
      <i data-lucide="loader" class="animate-spin mr-3 w-6 h-6"></i>
      <span data-i18n-key="loading_saga">Memuat Saga...</span>
    </div>

    <div id="main-content" class="glass-card p-6 sm:p-8 rounded-2xl shadow-lg w-full flex flex-col space-y-6">
      <h2 class="text-2xl sm:text-3xl font-bold text-white text-center mb-4" data-i18n-key="login_header">
        Selami Denyut Realitas
      </h2>

      <div id="logged-out-view" class="space-y-4">
        <input
          type="text"
          id="wanderer-name-input"
          class="glass-input w-full p-3 text-lg rounded-lg placeholder-slate-400 focus:ring-indigo-500 focus:border-indigo-500"
          placeholder="Nama Wanderer Anda..."
        />
        
        <button
          id="play-as-wanderer-btn"
          class="glass-button primary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center"
        >
          <i data-lucide="user" class="w-6 h-6 mr-2"></i> <span data-i18n-key="play_as_wanderer">Main sebagai Wanderer</span>
        </button>
        
        <div class="flex items-center justify-center space-x-2 text-slate-400">
          <hr class="flex-grow border-slate-600" />
          <span data-i18n-key="or_text">atau</span>
          <hr class="flex-grow border-slate-600" />
        </div>

        <button
          id="play-as-forger-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center"
        >
          <i data-lucide="tool" class="w-6 h-6 mr-2"></i> <span data-i18n-key="play_as_forger">Main sebagai Forger (Admin)</span>
        </button>

        <p id="status-message" class="text-center text-sm status-message text-red-400 opacity-0 mt-4"></p>
      </div>

      <div id="logged-in-view" class="hidden space-y-4">
        <p class="text-center text-xl text-white"><span data-i18n-key="welcome_back">Selamat Datang</span>, <span id="current-username" class="font-bold"></span>!</p>
        <p class="text-center text-sm text-slate-400">
          <span data-i18n-key="logged_in_as_user_id">Anda telah masuk dengan ID Pengguna:</span> <span id="user-id-display" class="font-mono text-xs bg-slate-800 px-2 py-1 rounded-md"></span>
        </p>
        <button
          id="continue-game-btn"
          class="glass-button primary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center"
        >
          <i data-lucide="play" class="w-6 h-6 mr-2"></i> <span data-i18n-key="continue_saga">Lanjutkan Saga</span>
        </button>
        <button
          id="go-to-designer-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="square-stack" class="w-6 h-6 mr-2"></i> <span data-i18n-key="go_to_designer">Perancang Peradaban</span>
        </button>
        <button
          id="go-to-narrative-timeline-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="git-branch" class="w-6 h-6 mr-2"></i> <span data-i18n-key="go_to_narrative_timeline">Garis Waktu Naratif</span>
        </button>
        <button
          id="go-to-genealogy-atlas-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="users" class="w-6 h-6 mr-2"></i> <span data-i18n-key="go_to_genealogy_atlas">Atlas Silsilah</span>
        </button>
        <button
          id="go-to-multiverse-suite-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="globe"></i> <span data-i18n-key="go_to_multiverse_suite">Simulasi Multiverse</span>
        </button>
        <button
          id="go-to-ai-governance-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="brain" class="w-6 h-6 mr-2"></i> <span data-i18n-key="go_to_ai_governance">Konsol Tata Kelola AI</span>
        </button>
         <button
          id="go-to-primordial-console-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="scale"></i> <span data-i18n-key="go_to_primordial_console">Konsol Primordial</span>
        </button>
        <button
          id="go-to-environmental-sculptor-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="palette"></i> <span data-i18n-key="go_to_environmental_sculptor">Perancang Lingkungan</span>
        </button>
        <button
          id="go-to-entity-inspector-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="eye"></i> <span data-i18n-key="go_to_entity_inspector">Inspektur Entitas</span>
        </button>
        <button
          id="go-to-cosmic-pattern-weaver-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="infinity"></i> <span data-i18n-key="go_to_cosmic_pattern_weaver">Penempa Pola Kosmis</span>
        </button>
        <button
          id="logout-btn"
          class="glass-button secondary-button w-full px-6 py-3 rounded-lg font-semibold text-lg flex items-center justify-center mt-2"
        >
          <i data-lucide="log-out" class="w-6 h-6 mr-2"></i> <span data-i18n-key="logout">Logout</span>
        </button>
      </div>
      
      <div class="flex items-center justify-center space-x-4 mt-6 text-slate-400 text-sm">
        <label for="language-select" data-i18n-key="language_label">Bahasa:</label>
        <select id="language-select" class="glass-input bg-slate-700 text-white p-1 rounded-md text-sm">
          <option value="en">English</option>
          <option value="id">Bahasa Indonesia</option>
        </select>
        <button id="toggle-simple-narrative" class="glass-button secondary-button px-3 py-1 rounded-md text-sm">
          <span data-i18n-key="simple_narrative_mode">Narasi Sederhana:</span> <span id="simple-narrative-status">Off</span>
        </button>
      </div>
    </div>
  </div>
</MainLayout>
