---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Nexus Roh Kuno - The Soulforge Saga">
  <div class="w-full max-w-6xl glass-card p-6 sm:p-8 rounded-2xl shadow-lg border border-border-color flex flex-col h-[95vh]">
    <h1 class="text-3xl sm:text-4xl font-bold text-white tracking-wider mb-6 text-center drop-shadow-lg" data-i18n-key="ancient_spirit_nexus_title">
      Nexus Roh Kuno
    </h1>

    <div class="flex-grow flex flex-col lg:flex-row gap-6 overflow-hidden">
      <!-- Spirit Connections -->
      <div class="flex-shrink-0 bg-slate-800/60 rounded-xl p-4 lg:w-80 flex flex-col space-y-4 overflow-y-auto scrollbar-thin">
        <h3 class="text-xl font-bold text-white mb-2" data-i18n-key="spirit_connections_title">Koneksi Roh</h3>
        
        <div class="space-y-3">
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-indigo-500">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-indigo-500 flex items-center justify-center mr-3">
                <i data-lucide="star" class="w-6 h-6 text-white"></i>
              </div>
              <div>
                <h4 class="font-bold text-white">Aethon the Starweaver</h4>
                <p class="text-xs text-slate-400">Roh Kesadaran Kosmik</p>
              </div>
            </div>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Terhubung: 7 hari</span>
              <span class="px-2 py-1 bg-green-600 text-xs rounded">Aktif</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-green-500">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-green-500 flex items-center justify-center mr-3">
                <i data-lucide="leaf" class="w-6 h-6 text-white"></i>
              </div>
              <div>
                <h4 class="font-bold text-white">Yggdrasil Guardian</h4>
                <p class="text-xs text-slate-400">Roh Kehidupan dan Pertumbuhan</p>
              </div>
            </div>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Terhubung: 14 hari</span>
              <span class="px-2 py-1 bg-green-600 text-xs rounded">Aktif</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-red-500">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-red-500 flex items-center justify-center mr-3">
                <i data-lucide="flame" class="w-6 h-6 text-white"></i>
              </div>
              <div>
                <h4 class="font-bold text-white">Infernal Aspect</h4>
                <p class="text-xs text-slate-400">Roh Transformasi dan Kekuatan</p>
              </div>
            </div>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Terhubung: 3 hari</span>
              <span class="px-2 py-1 bg-yellow-600 text-xs rounded">Tidur</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-blue-500">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center mr-3">
                <i data-lucide="droplets" class="w-6 h-6 text-white"></i>
              </div>
              <div>
                <h4 class="font-bold text-white">Aqua Serenity</h4>
                <p class="text-xs text-slate-400">Roh Ketenangan dan Penyembuhan</p>
              </div>
            </div>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Terhubung: 21 hari</span>
              <span class="px-2 py-1 bg-green-600 text-xs rounded">Aktif</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-purple-500">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-purple-500 flex items-center justify-center mr-3">
                <i data-lucide="eye" class="w-6 h-6 text-white"></i>
              </div>
              <div>
                <h4 class="font-bold text-white">Visionary Oracle</h4>
                <p class="text-xs text-slate-400">Roh Visi dan Ramalan</p>
              </div>
            </div>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Terhubung: 1 hari</span>
              <span class="px-2 py-1 bg-red-600 text-xs rounded">Terputus</span>
            </div>
          </div>
          
          <div class="glass-card p-4 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors border-l-4 border-yellow-500">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-yellow-500 flex items-center justify-center mr-3">
                <i data-lucide="zap" class="w-6 h-6 text-white"></i>
              </div>
              <div>
                <h4 class="font-bold text-white">Storm Caller</h4>
                <p class="text-xs text-slate-400">Roh Perubahan dan Kebebasan</p>
              </div>
            </div>
            <div class="flex justify-between text-xs text-slate-400 mt-2">
              <span>Belum Terhubung</span>
              <span class="px-2 py-1 bg-slate-600 text-xs rounded">Tersedia</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Spirit Nexus Visualization -->
      <div class="flex-grow bg-slate-800/60 rounded-xl p-4 overflow-hidden">
        <div class="glass-card p-6 rounded-lg h-full flex flex-col">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-white">Aethon the Starweaver</h3>
            <span class="px-3 py-1 bg-green-600 text-sm rounded">Aktif</span>
          </div>
          
          <div class="flex-grow relative mb-6">
            <div id="spirit-nexus" class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 rounded-lg flex items-center justify-center">
              <!-- Nexus visualization will be rendered here -->
              <div class="relative w-80 h-80">
                <!-- Central nexus point -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-20 h-20 bg-white rounded-full opacity-20 animate-pulse"></div>
                
                <!-- Orbiting spirit connections -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 rounded-full border-2 border-indigo-400 opacity-50"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-48 h-48 rounded-full border-2 border-purple-400 opacity-30"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 rounded-full border-2 border-blue-400 opacity-20"></div>
                
                <!-- Spirit representations -->
                <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-12 h-12 bg-indigo-500 rounded-full flex items-center justify-center">
                  <i data-lucide="star" class="w-6 h-6 text-white"></i>
                </div>
                
                <div class="absolute top-1/2 right-0 transform translate-x-1/2 -translate-y-1/2 w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
                  <i data-lucide="leaf" class="w-6 h-6 text-white"></i>
                </div>
                
                <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 translate-y-1/2 w-12 h-12 bg-red-500 rounded-full flex items-center justify-center">
                  <i data-lucide="flame" class="w-6 h-6 text-white"></i>
                </div>
                
                <div class="absolute top-1/2 left-0 transform -translate-x-1/2 -translate-y-1/2 w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
                  <i data-lucide="droplets" class="w-6 h-6 text-white"></i>
                </div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="glass-card p-4 rounded-lg">
              <h4 class="font-bold text-slate-300 mb-2">Manfaat Koneksi</h4>
              <ul class="text-slate-300 space-y-1 text-sm">
                <li class="flex items-start">
                  <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mr-2 mt-0.5"></i>
                  <span>Peningkatan kesadaran kosmik</span>
                </li>
                <li class="flex items-start">
                  <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mr-2 mt-0.5"></i>
                  <span>Akses ke visi mistis</span>
                </li>
                <li class="flex items-start">
                  <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mr-2 mt-0.5"></i>
                  <span>Perlindungan spiritual</span>
                </li>
              </ul>
            </div>
            
            <div class="glass-card p-4 rounded-lg">
              <h4 class="font-bold text-slate-300 mb-2">Biaya Koneksi</h4>
              <ul class="text-slate-300 space-y-1 text-sm">
                <li class="flex items-start">
                  <i data-lucide="minus-circle" class="w-4 h-4 text-yellow-500 mr-2 mt-0.5"></i>
                  <span>Energi mental 15%/hari</span>
                </li>
                <li class="flex items-start">
                  <i data-lucide="minus-circle" class="w-4 h-4 text-yellow-500 mr-2 mt-0.5"></i>
                  <span>Waktu meditasi 30 menit</span>
                </li>
              </ul>
            </div>
            
            <div class="glass-card p-4 rounded-lg">
              <h4 class="font-bold text-slate-300 mb-2">Status</h4>
              <div class="space-y-2">
                <div class="flex justify-between text-sm">
                  <span class="text-slate-400">Stabilitas</span>
                  <span class="text-white">Tinggi (92%)</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-slate-400">Kekuatan</span>
                  <span class="text-white">Sedang (65%)</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-slate-400">Harmoni</span>
                  <span class="text-white">Tinggi (88%)</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <button class="glass-button primary-button px-4 py-2">
              <i data-lucide="zap"></i> <span>Aktifkan Kekuatan</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="settings"></i> <span>Sesuaikan Koneksi</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="unlink"></i> <span>Putus Koneksi</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <button id="back-to-wanderer-btn" class="glass-button secondary-button mt-8">
      <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i> <span data-i18n-key="back_to_wanderer_dashboard">Kembali ke Dashboard Wanderer</span>
    </button>
  </div>
</MainLayout>