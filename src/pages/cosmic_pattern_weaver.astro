---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Penempa Pola Kosmis - The Soulforge Saga">
  <div class="w-full max-w-6xl glass-card p-6 sm:p-8 rounded-2xl shadow-lg border border-border-color flex flex-col h-[95vh]">
    <h1 class="text-3xl sm:text-4xl font-bold text-white tracking-wider mb-6 text-center drop-shadow-lg" data-i18n-key="cosmic_pattern_weaver_title">
      Penempa Pola Kosmis
    </h1>

    <div class="flex-grow flex flex-col lg:flex-row gap-6 overflow-hidden">
      <!-- Pattern Library -->
      <div class="flex-shrink-0 bg-slate-800/60 rounded-xl p-4 lg:w-80 flex flex-col space-y-4 overflow-y-auto scrollbar-thin">
        <h3 class="text-xl font-bold text-white mb-2" data-i18n-key="pattern_library_title">Pustaka Pola</h3>
        
        <div class="space-y-3">
          <div class="relative">
            <input type="text" placeholder="Cari pola..." class="glass-input w-full p-2 pl-8">
            <i data-lucide="search" class="w-4 h-4 text-slate-400 absolute left-2 top-3"></i>
          </div>
          
          <div class="max-h-96 overflow-y-auto scrollbar-thin space-y-2">
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded bg-indigo-500 flex items-center justify-center mr-3">
                  <div class="w-6 h-6 bg-white rounded-full"></div>
                </div>
                <div>
                  <h4 class="font-bold text-white">Spiral Kesadaran</h4>
                  <p class="text-xs text-slate-400">Pola evolusi spiritual</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded bg-green-500 flex items-center justify-center mr-3">
                  <div class="w-6 h-6 bg-white transform rotate-45"></div>
                </div>
                <div>
                  <h4 class="font-bold text-white">Matriks Kehidupan</h4>
                  <p class="text-xs text-slate-400">Pola pertumbuhan organik</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded bg-red-500 flex items-center justify-center mr-3">
                  <div class="w-6 h-6 border-2 border-white rounded-full"></div>
                </div>
                <div>
                  <h4 class="font-bold text-white">Gelombang Entropi</h4>
                  <p class="text-xs text-slate-400">Pola dekadensi dan transformasi</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded bg-blue-500 flex items-center justify-center mr-3">
                  <div class="w-6 h-6 bg-white flex">
                    <div class="w-1/2 bg-blue-300"></div>
                  </div>
                </div>
                <div>
                  <h4 class="font-bold text-white">Arus Kausalitas</h4>
                  <p class="text-xs text-slate-400">Pola hubungan sebab-akibat</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded bg-purple-500 flex items-center justify-center mr-3">
                  <div class="w-6 h-6 bg-white relative">
                    <div class="absolute top-0 left-0 w-3 h-3 bg-purple-300"></div>
                    <div class="absolute top-0 right-0 w-3 h-3 bg-purple-300"></div>
                    <div class="absolute bottom-0 left-0 w-3 h-3 bg-purple-300"></div>
                    <div class="absolute bottom-0 right-0 w-3 h-3 bg-purple-300"></div>
                  </div>
                </div>
                <div>
                  <h4 class="font-bold text-white">Jaring Kosmik</h4>
                  <p class="text-xs text-slate-400">Pola konektivitas universal</p>
                </div>
              </div>
            </div>
            
            <div class="glass-card p-3 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded bg-yellow-500 flex items-center justify-center mr-3">
                  <div class="w-6 h-6 bg-white rounded-full relative">
                    <div class="absolute top-1/2 left-1/2 w-2 h-2 bg-yellow-300 rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
                  </div>
                </div>
                <div>
                  <h4 class="font-bold text-white">Inti Kreativitas</h4>
                  <p class="text-xs text-slate-400">Pola inovasi dan inspirasi</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pattern Canvas and Controls -->
      <div class="flex-grow bg-slate-800/60 rounded-xl p-4 overflow-hidden">
        <div class="glass-card p-6 rounded-lg h-full flex flex-col">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-white">Spiral Kesadaran</h3>
            <div class="flex gap-2">
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="play"></i>
              </button>
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="pause"></i>
              </button>
              <button class="glass-button secondary-button px-3 py-1">
                <i data-lucide="rotate-ccw"></i>
              </button>
            </div>
          </div>
          
          <div class="flex-grow relative mb-6">
            <div id="pattern-canvas" class="absolute inset-0 bg-slate-900/50 rounded-lg flex items-center justify-center">
              <!-- Pattern visualization will be rendered here -->
              <div class="relative w-64 h-64">
                <!-- Spiral pattern -->
                <div class="absolute inset-0 rounded-full border-2 border-indigo-500 animate-pulse"></div>
                <div class="absolute inset-4 rounded-full border-2 border-indigo-400 animate-pulse" style="animation-delay: 0.2s"></div>
                <div class="absolute inset-8 rounded-full border-2 border-indigo-300 animate-pulse" style="animation-delay: 0.4s"></div>
                <div class="absolute inset-12 rounded-full border-2 border-indigo-200 animate-pulse" style="animation-delay: 0.6s"></div>
                
                <!-- Center point -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-indigo-500 rounded-full"></div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div>
              <label class="block text-slate-400 text-sm mb-1">Frekuensi</label>
              <input type="range" min="0.1" max="10" step="0.1" value="2.5" class="w-full h-2 bg-blue-700 rounded-lg appearance-none cursor-pointer">
            </div>
            <div>
              <label class="block text-slate-400 text-sm mb-1">Amplitudo</label>
              <input type="range" min="0" max="100" value="75" class="w-full h-2 bg-blue-700 rounded-lg appearance-none cursor-pointer">
            </div>
            <div>
              <label class="block text-slate-400 text-sm mb-1">Kompleksitas</label>
              <input type="range" min="1" max="10" value="5" class="w-full h-2 bg-blue-700 rounded-lg appearance-none cursor-pointer">
            </div>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <button class="glass-button primary-button px-4 py-2">
              <i data-lucide="save"></i> <span>Simpan Pola</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="download"></i> <span>Ekspor Pola</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="share"></i> <span>Bagikan Pola</span>
            </button>
            <button class="glass-button secondary-button px-4 py-2">
              <i data-lucide="zap"></i> <span>Terapkan ke Dunia</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <button id="back-to-forger-btn" class="glass-button secondary-button mt-8">
      <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i> <span data-i18n-key="back_to_forger_dashboard">Kembali ke Dashboard Forger</span>
    </button>
  </div>
</MainLayout>